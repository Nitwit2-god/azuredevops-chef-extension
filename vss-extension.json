{
    "manifestVersion": "1",
    "id": "vsts-chef-tasks",
    "name": "Extension to communicate with the Chef API",
    "version": "1.0.0",
    "publisher": "russellseymour",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "Tasks for running opertaions against the Chef API",
    "categories": [
        "Build and release"
    ],
    "icons": {
        "default": "images/cheflogo.png"
    },
    "content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "license.txt"
        }
    },
    "screenshots": [
        {
            "path": "screenshot_env_task.png"
        },
        {
            "path": "screenshot_env_parameters.png"
        }
    ],
    "files": [
        {
            "path": "tasks"
        }
    ],
    "contributions": [
        {
            "id": "vsts-chef-tasks-update-environment",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/update_environment"
            }
        }
    ]
}