{
    "manifestVersion": "1",
    "id": "vsts-chef-tasks",
    "name": "Chef Integration",
    "version": "0.1.9",
    "publisher": "chef-software",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "Tasks for performing common operations against Chef Server.",
    "categories": [
        "Build and release"
    ],
    "galleryFlags": [
        "Preview"
    ],
    "icons": {
        "default": "images/cheflogo.png"
    },
    "content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "license.txt"
        }
    },
    "screenshots": [
        {
            "path": "screenshot_env_task.png"
        },
        {
            "path": "screenshot_env_parameters.png"
        }
    ],
    "files": [
        {
            "path": "tasks"
        }
    ],
    "contributions": [
        {
            "id": "chef-server-endpoint",
            "description": "Service Endpoint for Chef Servers",
            "type": "ms.vss-endpoint.service-endpoint-type",
            "targets": [
                "ms.vss-endpoint.endpoint-types"
            ],
            "properties": {
                "name": "chefserverendpoint",
                "displayName": "Chef Server",
                "url": {
                    "displayName": "Chef Server URL",
                    "helpText": "URL to the Chef Server including the Organization"
                },
                "authenticationSchemes": [
                    {
                        "type": "ms.vss-endpoint.endpoint-auth-scheme-basic",
                        "inputDescriptors": [
                            {
                                "id": "username",
                                "name": "Username (Node Name)",
                                "description": "Chef Server Username",
                                "inputMode": "textbox",
                                "isConfidential": false,
                                "validation": {
                                    "isRequired": true,
                                    "dataType": "string"
                                }
                            },
                            {
                                "id": "password",
                                "name": "Client Key",
                                "description": "Private key associated with the specified user",
                                "inputMode": "textarea",
                                "isConfidential": true,
                                "validation": {
                                    "isRequired": true,
                                    "dataType": "string"
                                }
                            },
                            {
                                "id": "sslVerify",
                                "name": "SSL Verification",
                                "description": "Enable SSL Verification for Chef Server.",
                                "inputMode": "combo",
                                "isConfidential": false,
                                "validation": {
                                    "isRequired": false,
                                    "dataType": "string"
                                },
                                "values": {
                                    "inputId": "sslVerifyValues",
                                    "defaultValue": "1",
                                    "possibleValues": [
                                        {
                                            "value": "1",
                                            "displayValue": "True"
                                        },
                                        {
                                            "value": "0",
                                            "displayValue": "False"
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                ],
                "helpMarkDown": "Please provide the requested information so that VSTS can access your Chef server instance"
            }
        },
        {
            "id": "vsts-chef-tasks-environment-cookbook-version-constraint",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/env_version_constraint"
            }
        },
        {
            "id": "vsts-chef-tasks-environment-vsts-variables",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/env_vsts_variables"
            }
        },
        {
            "id": "vsts-chef-tasks-cookbook-upload",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/upload_cookbook"
            }
        },
        {
            "id": "vsts-chef-tasks-cookbook-version",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/cookbook_version"
            }
        },
        {
            "id": "vsts-chef-tasks-exec-inspec",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/exec_inspec"
            }
        },
        {
            "id": "vsts-chef-tasks-exec-chef-client",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/exec_chef_client"
            }
        }
    ]
}