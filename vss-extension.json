{
    "manifestVersion": "1",
    "id": "vsts-chef-tasks",
    "name": "Extension to communicate with the Chef API",
    "version": "0.1.9",
    "publisher": "russellseymour",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "Tasks for running opertaions against the Chef API",
    "categories": [
        "Build and release"
    ],
    "icons": {
        "default": "images/cheflogo.png"
    },
    "content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "license.txt"
        }
    },
    "screenshots": [
        {
            "path": "screenshot_env_task.png"
        },
        {
            "path": "screenshot_env_parameters.png"
        }
    ],
    "files": [
        {
            "path": "tasks"
        }
    ],
    "contributions": [
        {
            "id": "chef-server-endpoint",
            "description": "Service Endpoint for Chef Servers",
            "type": "ms.vss-endpoint.service-endpoint-task",
            "targets": [
                "ms.vss-endpoint.endpoint-types"
            ],
            "properties": {
                "name": "chef-server",
                "displayName": "Chef Server Connection",
                "url": {
                    "displayName": "Chef Server URL",
                    "helpText": "URL to the Chef Server including the Organization"
                },
                "nodename": {
                    "displayName": "Username",
                    "helpText": "User or node name to use with the connection"
                },
                "key": {
                    "displayName": "Key",
                    "helpText": "Private key associated with the specified user"
                }
            }
        },
        {
            "id": "vsts-chef-tasks-update-environment",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/update_environment"
            }
        }
    ]
}